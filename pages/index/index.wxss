.banner {
  padding-top: 30rpx;
}

.banner swiper {
  height: 460rpx;
}

.banner swiper swiper-item image {
  width: 690rpx;
  height: 460rpx;
  border-radius: 30rpx;
}

.scrollNav {
  padding: 50rpx 30rpx;
}

.scrollNav scroll-view {
  white-space: nowrap;
}

.scrollNav scroll-view .item {
  display: inline-block;
  padding: 0 25rpx;
}

.scrollNav scroll-view .item .img2 {
  width: 105rpx;
  height: 105rpx;
  text-align: centers;
}

.scrollNav scroll-view .item .img2 image {
  width: 100%;
  height: 100%;
}

.scrollNav scroll-view .item .text {
  font-size: 32rpx;
  color: #1a1b1c;
  padding-top: 10rpx;
}

.scrollNav scroll-view .item:first-child {
  padding-left: 0;
}

.scrollNav scroll-view .item:last-child {
  padding-right: 0;
}

.about {
  padding: 50rpx 30rpx 80rpx;
  background: #f1efed;
}

.about .content .row {
  line-height: 1.6em;
  text-indent: 2em;
  padding: 20rpx 0;
  border-bottom: 1rpx dashed #BDA066;
}

.about .content .row:first-child {
  padding-top: 0;
}

.about .content .row:last-child {
  padding-bottom: 0;
  border-bottom: none;
}

.news {
  padding: 50rpx 30rpx;
}
